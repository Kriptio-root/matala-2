// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  // unique nickname used for indification.
  nickname  String   @unique
  // flag online/offline.
  isOnline  Boolean  @default(false)
  createdAt DateTime @default(now())

  // Sessions, created when user connected.
  sessions Session[] // relation one to many

  lastRecivedPublicMessage DateTime?

  // Messages, sent by user.
  messagesSent Message[] @relation("SentMessages")

  // Messages, received by user.
  messagesReceived Message[] @relation("ReceivedMessages")
}

model Session {
  id        String   @id @default(uuid())
  socketId  String? // socket unique id
  createdAt DateTime @default(now())

  // relation to user
  nickname String
  user     User   @relation(fields: [nickname], references: [nickname])
}

model Message {
  id          String   @id @default(uuid())
  text        String
  command     String
  createdAt   DateTime @default(now())
  isDelivered Boolean  @default(false)

  // who sent the message
  fromUserNickname String
  fromUser         User   @relation("SentMessages", fields: [fromUserNickname], references: [nickname])

  // to whom the message is sent
  toUserNickname String?
  toUser         User?   @relation("ReceivedMessages", fields: [toUserNickname], references: [nickname])
  public         Boolean @default(true)
}
