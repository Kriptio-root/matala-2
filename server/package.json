{
  "name": "server",
  "version": "1.0.0",
  "keywords": ["chat", "tcp", "server", "client", "matala", "matala-2", "Konstantin Potyomkin"],
  "author": "Konstantin Potyomkin",
  "license": "ISC",
  "type": "commonjs",
  "description": "Matala 2 - Simple TCP server and client for chat application",
  "main": "./build/index.js",
  "engines": {
    "node": ">=22.13.0"
  },
  "scripts": {
    "dev": "npx prisma generate && rimraf ./build && tsc -p tsconfig.build.json && nodemon ./build/index.js",
    "start": "node ./build/index.js",
    "preprod": "npm run build && node ./build/index.js",
    "build": "rimraf ./build && tsc",
    "delete-build": "rimraf ./build",
    "delete-js": "rimraf server/src//*.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma": "npx prisma generate",
    "prisma-init": "npx prisma init --datasource-provider sqlite"
  },
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "@prisma/client": "^5.21.1",
    "@t3-oss/env-core": "^0.10.1",
    "dotenv": "^16.3.1",
    "glob": "^10.3.10",
    "inversify": "^6.0.2",
    "inversify-inject-decorators": "^3.1.0",
    "inversify-logger-middleware": "^3.1.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.0.0",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.8.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "prettier-eslint": "^16.3.0",
    "prisma": "^5.21.1",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
