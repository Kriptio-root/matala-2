{
  "name": "matala-2",
  "version": "1.0.0",
  "keywords": ["chat", "tcp", "server", "client", "matala", "matala-2", "Konstantin Potyomkin"],
  "author": "Konstantin Potyomkin",
  "license": "ISC",
  "description": "Matala 2 - Simple TCP server and client for chat application",
  "private": true,
  "scripts": {
    "start:server": "npm run start --workspace server",
    "start:client": "npm run start --workspace client",
    "pre-first-run": "npm install && npm run pre-prod:client && npm run pre-prod:server",
    "pre-prod:server": "npm run pre-prod --workspace server",
    "pre-prod:client": "npm run pre-prod --workspace client",
    "dev:server": "npm run dev --workspace server",
    "dev:client": "npm run dev --workspace client",
    "lint:server": "npm run lint --workspace server",
    "lint:client": "npm run lint --workspace client",
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm run build --workspace server",
    "build:client": "npm run build --workspace client"
  },
  "workspaces": [
    "server",
    "client"
  ]
}
