{
  "name": "client",
  "version": "1.0.0",
  "keywords": [
    "chat",
    "tcp",
    "server",
    "client",
    "matala",
    "matala-2",
    "Konstantin Potyomkin"
  ],
  "author": "Konstantin Potyomkin",
  "license": "ISC",
  "type": "commonjs",
  "description": "Matala 2 - Simple TCP server and client for chat application",
  "main": "../build/client/index.js",
  "engines": {
    "node": ">=22.13.0"
  },
  "scripts": {
    "start": "electron ../build/client/index.js",
    "pre-prod": "npm run build",
    "dev": "npm run build && electron ../build/client/index.js",
    "build": "npm run delete-build && tsc && npm run copy-public",
    "copy-public": "copyfiles ./public/**/* ../build/client",
    "delete-build": "rimraf ../build/client",
    "delete-js": "rimraf src//*.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.10.1",
    "chalk": "^5.4.1",
    "dotenv": "^16.3.1",
    "electron": "^34.0.0"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.8.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-n": "^17.10.2",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "prettier-eslint": "^16.3.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
